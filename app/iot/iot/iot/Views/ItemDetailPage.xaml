<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iot.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Location:"             FontSize="Medium"   TextColor="Black"/>
        <Label Text="{Binding Location}"    FontSize="Small"    TextColor="Black"/>
        <Label Text="Spot:"                 FontSize="Medium"   TextColor="Black"/>
        <Label Text="{Binding Spot}"        FontSize="Small"    TextColor="Black"/>
        <Label Text="Occupied:"             FontSize="Medium"   TextColor="Black"/>
        <Label Text="{Binding Occupied}"    FontSize="Small"    TextColor="Black"/>
        <Label Text="TimeIn:"               FontSize="Medium"   TextColor="Black"/>
        <Label Text="{Binding TimeIn}"      FontSize="Small"    TextColor="Black"/>
        <Label Text="BilledTime:"           FontSize="Medium"   TextColor="Black" />
        <Label Text="{Binding BilledTime}"  FontSize="Small"    TextColor="Black"/>
    </StackLayout>
    
</ContentPage>